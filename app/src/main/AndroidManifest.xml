        </activity>

        <activity
            android:name=".userdetail.FeedDetailRootActivity"
            android:theme="@style/Transparent"></activity>

        <activity
            android:name=".detail.FeedDetailActivity"
            android:theme="@style/Transparent"></activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>